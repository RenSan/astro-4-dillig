---
interface Props {
    title: string;
    price: number;
    description: string;
    image: string;
    features: string[];
}

const { title, price, description, image, features } = Astro.props;

export const prerender = true;
---

<div
    class="group flex flex-col md:flex-row bg-white rounded-lg overflow-hidden shadow-lg transition duration-300 ease-in-out hover:shadow-2xl"
>
    <div
        class="flex-1 bg-primary flex items-center justify-center min-w-[300px] overflow-hidden"
    >
        <img
            src={image}
            alt={`${title} package`}
            class="w-full h-full object-cover transition duration-300 ease-in-out transform group-hover:scale-110"
        />
    </div>
    <div class="flex-1 p-8">
        <h2
            class="text-4xl font-bold mb-4 text-gray-800 uppercase transition duration-300 ease-in-out group-hover:text-primary"
        >
            {title}
        </h2>
        <p class="text-3xl font-bold mb-4">
            ${price.toFixed(2)} MXN
        </p>
        <p class="text-gray-600 mb-6">{description}</p>
        <h3 class="text-xl font-bold text-gray-800 mb-4">QUÃ‰ INCLUYE:</h3>
        <div class="grid grid-cols-2 gap-4 mb-8">
            {
                features.map((feature) => (
                    <div class="flex items-center">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            class="w-5 h-5 text-primary mr-2 flex-shrink-0"
                        >
                            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z" />
                        </svg>
                        <span class="text-sm">{feature}</span>
                    </div>
                ))
            }
        </div>
        <button
            class="bg-primary hover:bg-primary-dark text-white font-bold py-3 px-6 rounded transition duration-300 relative"
        >
            <span class="relative z-10 pr-4">EMPEZAR&nbsp;</span>
            <span
                class="absolute right-4 top-1/2 transform -translate-y-1/2 transition-transform duration-300 group-hover:translate-x-1"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2.5"
                    stroke="currentColor"
                    class="w-6 h-6"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
                </svg>
            </span>
        </button>
    </div>
</div>

<style>
    div {
        color: #333;
    }
</style>
